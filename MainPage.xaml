<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:Mauioke.Components"
             x:Class="Mauioke.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Mauioke!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Sing your favorite songs with Mauioke, the ultimate karaoke app built with .NET"
                Style="{StaticResource SubHeadline}" />

            <Button
                Text="Add Song"
                SemanticProperties.Hint="Navigates to the next page" />

            <components:SongPicker/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
